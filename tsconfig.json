{
    "compilerOptions": {
      "target": "es2018",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["es2017", "dom", "es2018", "esnext"],
      "strict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "sourceMap": true,
      "outDir": "build/ts-out",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "plugins": [
        {
            "name": "ts-lit-plugin",
            "strict": true
        }
    ]
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": []
  }